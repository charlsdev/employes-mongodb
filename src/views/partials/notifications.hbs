
{{#if success_msg}}
   <div class="alert alert-success alert-dismissible fade show text-start" role="alert">
      <strong>Aviso</strong>
      <p style="text-align: left; font-size: 0.8em; color: #333;">{{success_msg}}</p>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
   </div>
{{/if}}

{{#if error_msg}}
   <div class="alert alert-danger alert-dismissible fade show text-start" role="alert">
      <strong>Aviso</strong>
      <p style="text-align: left; font-size: 0.8em; color: #333;">{{error_msg}}</p>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close">
      </button>
   </div>
{{/if}}

{{#if error}}
   <div class="alert alert-danger alert-dismissible fade show text-start" role="alert">
      <strong>Aviso</strong>
      <p style="text-align: left; font-size: 0.8em; color: #333;">{{error}}</p>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
   </div>
{{/if}}

{{#if warning_msg}}
   <div class="alert alert-warning alert-dismissible fade show text-start" role="alert">
      <strong>Aviso</strong>
      <p style="text-align: left; font-size: 0.8em; color: #333;">{{warning_msg}}</p>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
   </div>
{{/if}}

{{#if info_msg}}
   <div class="alert alert-info alert-dismissible fade show text-start" role="alert">
      <strong>Aviso</strong>
      <p style="text-align: left; font-size: 0.8em; color: #333;">{{info_msg}}</p>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
   </div>
{{/if}}

{{#each errors}}
   <div class="alert alert-{{info}} alert-dismissible fade show text-start" role="alert">
      <strong>{{tittle}}</strong>
      <p style="text-align: left; font-size: 0.8em; color: #333;">{{text}}</p>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
   </div>
{{/each}}